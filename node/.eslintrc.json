{
  "extends": "../.eslintrc.json",
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "generators": true,
    "templateStrings": true,
    "classes": true,
    "arrowFunctions": true,
    "forOf": true
  },
  "globals": {
    "__base": false
  },
  "rules": {
    "prefer-arrow-callback": 1
  }
}
